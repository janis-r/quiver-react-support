{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/*"
  ]
}